{% extends 'base2columns.html.twig' %}
{% block title %}CaCert{% endblock %}
{% block content %}
<div class="card my-4 mb-4">
	<div class="card-body">
		
		<h2 class="card-title">Emails</h2>
		
		<div class="row">
			<div class="col-12">
				{{ form_start(form) }}
				{{ form_errors(form) }}
				{{ form_end(form) }}
			</div>
		</div>
		
		<div class="row">
			<div class="col-12">
				<table class="table table-sm table-striped table-bordered">
					<thead>
						<tr>
							<th scope="col"></th>
							<th scope="col">Status</th>
							<th scope="col">Email</th>
							<th scope="col"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td scope="row"></td>
							<td class="text-success">verified</td>
							<td>{{ app.user.email }}</td>
							<td></td>
							<td></td>
						</tr>
						{% for email in emails %}
						<tr>
							<td scope="row">{{ email.id }}</td>
							{% if email.verified %}
							<td class="text-success">verified</td>
							{% else %}
							<td class="text-danger">not verified</td>
							{% endif %}
							<td>{{ email.email }}</td>
							<td><button class="">{{ email.id }}</button></td>
							<td><button class="">{{ email.id }}</button></td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>
{% endblock %}