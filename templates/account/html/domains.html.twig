{% extends 'base2columns.html.twig' %}
{% block title %}
CaCert
{% endblock %}
{% block content %}
<div class="card my-4 mb-4">
	<div class="card-body">
		
		<h2 class="card-title">Domains</h2>
		
		
		{{ form_start(form) }}
		{{ form_errors(form) }}
		<div class="row">
			<div class="col-12">
				{{ form_row(form.domain) }}
			</div>
		</div>
		<div class="row">
			<div class="col-12">
			<div class="form-group">
				<button type="submit" class="btn btn-success">Aggiungi dominio</button>
				</div>
			</div>
		</div>
        {{ form_end(form) }}
		
		
		
		<div class="row">
			<div class="col-12">
				<table class="table table-sm table-striped table-bordered">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Domain</th>
							<th scope="col"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						{% for domain in domains %}
						<tr>
							<th scope="row">{{ domain.id }}</th>
							<th>{{ domain.domain }}</th>
							<td><button></button></td>
							<td><button></button></td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>
{% endblock %}