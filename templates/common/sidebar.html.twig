<!-- Sidebar Widgets Column -->

<div class="card my-4">

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <h5 class="card-header">Profile</h5>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-12">
                <img  src="{{ app.user.GravatarUrl() }}" alt=""class="rounded-0">
            </div>
            <div class="col-12">
                <h6>{{ app.user.FirstName}}</h6>
            </div>
            <div class="col-12">
                <h6>{{ app.user.LastName}}</h6>
            </div>
            <div class="col-12">
                <a class="btn btn-primary" href="{{ path('logout') }}">Logout</a>
            </div>
        </div>
    </div>
    {% else %}
    <h5 class="card-header">Login</h5>
    <div class="card-body">
        {% if login_error is defined  and login_error != null %}
        <div class="alert alert-danger" role="alert">
                {{ login_error.messageKey|trans(login_error.messageData, 'security') }}
        </div>
        {% endif %}
    
        <form action="{{ path('login') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="form-group">
                <label>Email</label>
                <input type="text" name="_username" class="form-control" placeholder="email" {% if login_username is defined %} value="{{login_username}}"{% endif %} >
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="_password" class="form-control" placeholder="password">
            </div>
            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me"/>
                <label for="remember_me">Keep me logged in</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">LOGIN</button>
            </div>
        </form>

    </div>
    {% endif %}
   
</div>

